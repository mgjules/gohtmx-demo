package templates

import (
	"time"
	"github.com/mgjules/gohtmx-demo/task"
)

templ IndexPage(tasks []task.Task) {
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<link href="./assets/dist/app.css" rel="stylesheet"/>
